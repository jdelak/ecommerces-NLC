<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="payzen_oney" translate="label" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>FACILYPAY ONEY PAYMENT</label>
        <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
        <attribute type="expanded">0</attribute>

        <group id="payzen_display_options" translate="label" type="text" sortOrder="61" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>BASIC SETTINGS</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="active" translate="label comment" type="select" sortOrder="611" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Activation</label>
                <comment>Enables / disables this payment method.</comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>payment/payzen_oney/active</config_path>
                <backend_model>Lyranetwork\Payzen\Model\System\Config\Backend\Oney\Active</backend_model>
            </field>

            <field id="sort_order" translate="label comment" type="text" sortOrder="612" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Sort order</label>
                <comment>In the payment methods list.</comment>
                <config_path>payment/payzen_oney/sort_order</config_path>
            </field>

            <field id="title" translate="label comment" type="text" sortOrder="613" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Method title</label>
                <comment>Method title to display on payment means page.</comment>
                <config_path>payment/payzen_oney/title</config_path>
            </field>

            <field id="module_logo" translate="label comment" type="image" sortOrder="614" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Logo</label>
                <comment>Allowed file types: jpeg, gif, png.</comment>
                <config_path>payment/payzen_oney/module_logo</config_path>
                <backend_model>Lyranetwork\Payzen\Model\System\Config\Backend\Logo</backend_model>
                <upload_dir config="system/filesystem/media" scope_info="0">payzen/images</upload_dir>
                <base_url type="media" scope_info="0">payzen/images</base_url>
            </field>
        </group>

        <group id="payzen_restrictions" translate="label" type="text" sortOrder="62" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>RESTRICTIONS</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="specificcountry_display" translate="label comment" type="label" sortOrder="621" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Authorized countries</label>
                <config_path>payment/payzen_oney/specificcountry_display</config_path>
            </field>

            <field id="custgroup_amount_restriction" translate="label comment" sortOrder="622" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Customer group amount restriction</label>
                <comment><![CDATA[Define amount restriction for each customer group.]]></comment>
                <frontend_model>Lyranetwork\Payzen\Block\Adminhtml\System\Config\Form\Field\CustgroupOptions</frontend_model>
                <backend_model>Lyranetwork\Payzen\Model\System\Config\Backend\Oney\CustgroupOptions</backend_model>
                <config_path>payment/payzen_oney/custgroup_amount_restriction</config_path>
            </field>
        </group>

        <group id="payzen_payment_page" translate="label" type="text" sortOrder="63" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>PAYMENT PAGE</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="capture_delay" translate="label comment" type="text" sortOrder="631" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Capture delay</label>
                <comment>The number of days before the bank capture. Enter value only if different from PayZen general configuration.</comment>
                <config_path>payment/payzen_oney/capture_delay</config_path>
            </field>

            <field id="validation_mode" translate="label comment" type="select" sortOrder="632" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Validation mode</label>
                <comment>If manual is selected, you will have to confirm payments manually in your PayZen Back Office.</comment>
                <source_model>Lyranetwork\Payzen\Model\System\Config\Source\ValidationMode</source_model>
                <config_path>payment/payzen_oney/validation_mode</config_path>
            </field>
        </group>

        <group id="payzen_payment_options" translate="label" type="text" sortOrder="64" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>PAYMENT OPTIONS</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="enable_oney_payment_options" translate="label comment" type="select" sortOrder="641" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Enable options selection</label>
                <comment>Enable payment options selection on merchant site.</comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>payment/payzen_oney/enable_oney_payment_options</config_path>
            </field>
        
            <field id="oney_payment_options" translate="label comment" sortOrder="642" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Payment options</label>
                <comment><![CDATA[Click on Add button to configure one or more payment options.<br /><b>Label: </b>The option label to display on the frontend (the %c, %r and %a patterns will be respectively replaced by payments count, option rate and option amount).<br /><b>Code: </b>The option code as defined in your FacilyPay Oney contract.<br /><b>Min. amount: </b>Minimum amount to enable the payment option.<br /><b>Max. amount: </b>Maximum amount to enable the payment option.<br /><b>Count: </b>Total number of payments.<br /><b>Rate: </b>The interest rate in percentage.]]></comment>
                <frontend_model>Lyranetwork\Payzen\Block\Adminhtml\System\Config\Form\Field\Oney\OneyPaymentOptions</frontend_model>
                <backend_model>Lyranetwork\Payzen\Model\System\Config\Backend\Oney\OneyPaymentOptions</backend_model>
                <config_path>payment/payzen_oney/oney_payment_options</config_path>
                <depends>
                    <field id="enable_oney_payment_options">1</field>
                </depends>
            </field>
        </group>
    </group>
</include>